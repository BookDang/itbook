generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String
  tags        Json?
  slug        String    @unique
  sequence    Int       @default(1)
  successorId Int?      @unique
  predecessor Category? @relation("ChildCategories", fields: [successorId], references: [id])
  successor   Category? @relation("ChildCategories")

  @@index([successorId])
  @@index([name])
  @@index([slug])
}
